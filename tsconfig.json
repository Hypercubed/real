{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "importHelpers": true,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}